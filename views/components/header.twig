<header class="header-site">
    <div class="container">
        <div class="row gy-2 gy-md-0">
            <div class="logotype-header col-12 col-md-6 d-flex flex-row justify-content-center justify-content-md-start align-items-center gap-2">
                {{ the_custom_logo()|raw }}
                <p class="m-0"><a href="{{ home_url('/') }}" rel="home">{{ bloginfo('name') }}</a></p>
            </div>

            <div class="menu-header col-12 col-md-6 d-flex flex-row justify-content-center justify-content-md-end align-items-center">
                {{ flat_menu('primary-menu', 'nav justify-content-start align-item-center gap-2')|raw }}
            </div>
        </div>
    </div>
</header>